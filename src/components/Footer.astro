<style>
	@layer starlight.core {
		footer {
			flex-direction: column;
			gap: 1.5rem;
		}
		.meta {
			gap: 0.75rem 3rem;
			justify-content: space-between;
			flex-wrap: wrap;
			margin-top: 3rem;
			font-size: var(--sl-text-sm);
			color: var(--sl-color-gray-3);
		}
		.meta > :global(p:only-child) {
			margin-inline-start: auto;
		}
	}

	.site-footer {
		margin-top: 3rem;
		padding-top: 2.5rem;
		border-top: 1px solid var(--sl-color-gray-5);
	}

	.footer-grid {
		display: grid;
		grid-template-columns: 2fr 1fr 1fr 1fr;
		gap: 2rem;
		margin-bottom: 2.5rem;
	}

	@media (max-width: 768px) {
		.footer-grid {
			grid-template-columns: 1fr 1fr;
			gap: 1.5rem;
		}
		.footer-col:first-child {
			grid-column: span 2;
		}
	}

	@media (max-width: 480px) {
		.footer-grid {
			grid-template-columns: 1fr;
		}
		.footer-col:first-child {
			grid-column: span 1;
		}
	}

	.footer-brand {
		max-width: 320px;
	}

	.footer-logo-text {
		font-size: 1.25rem;
		font-weight: 700;
		color: var(--sl-color-white);
	}

	.footer-tagline {
		margin-top: 0.75rem;
		font-size: var(--sl-text-sm);
		color: var(--sl-color-gray-3);
		line-height: 1.6;
	}

	.footer-heading {
		font-size: var(--sl-text-sm);
		font-weight: 600;
		color: var(--sl-color-white);
		margin: 0 0 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.footer-links {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.footer-links a {
		font-size: var(--sl-text-sm);
		color: var(--sl-color-gray-3);
		text-decoration: none;
		transition: color 0.2s;
	}

	.footer-links a:hover {
		color: var(--sl-color-accent);
	}

	.footer-bottom {
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-wrap: wrap;
		gap: 1rem;
		padding-top: 1.5rem;
		border-top: 1px solid var(--sl-color-gray-5);
		padding-bottom: 1rem;
	}

	.footer-social {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.footer-social a {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		color: var(--sl-color-gray-3);
		transition: color 0.2s;
		padding: 0.25rem;
	}

	.footer-social a:hover {
		color: var(--sl-color-accent);
	}

	.footer-copy {
		font-size: var(--sl-text-xs);
		color: var(--sl-color-gray-3);
	}

	.footer-copy p {
		margin: 0;
	}
</style>
