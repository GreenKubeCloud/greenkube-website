<div class="energy-diagram">
  <div class="energy-flow">
    <!-- Input -->
    <div class="energy-stage">
      <div class="energy-stage-header es-input">Input Metrics</div>
      <div class="energy-stage-body">
        <div class="energy-items">
          <div class="energy-item">
            <span class="ei-icon">üìà</span>
            <span class="ei-label">CPU Usage</span>
            <span class="ei-unit">cores</span>
          </div>
          <div class="energy-item">
            <span class="ei-icon">üíæ</span>
            <span class="ei-label">Instance Type</span>
            <span class="ei-unit">metadata</span>
          </div>
          <div class="energy-item">
            <span class="ei-icon">üñ•Ô∏è</span>
            <span class="ei-label">Node TDP</span>
            <span class="ei-unit">watts/vCPU</span>
          </div>
        </div>
      </div>
    </div>

    <div class="energy-arrow">
      <svg width="40" height="24" viewBox="0 0 40 24">
        <line x1="0" y1="12" x2="30" y2="12" stroke="var(--sl-color-gray-4)" stroke-width="2"/>
        <polygon points="30,6 40,12 30,18" fill="var(--sl-color-accent)"/>
      </svg>
    </div>

    <!-- Power Model -->
    <div class="energy-stage energy-formula-stage">
      <div class="energy-stage-header es-process">Power Model</div>
      <div class="energy-stage-body">
        <div class="energy-formula">
          <div class="formula-line">P<sub>idle</sub> = min_watts √ó vCPUs</div>
          <div class="formula-line">P<sub>max</sub> = max_watts √ó vCPUs</div>
          <div class="formula-divider"></div>
          <div class="formula-line formula-main">P<sub>node</sub> = P<sub>idle</sub> + (P<sub>max</sub> ‚àí P<sub>idle</sub>) √ó U</div>
          <div class="formula-note">U = CPU utilization (0.0 ‚Äì 1.0)</div>
        </div>
      </div>
    </div>

    <div class="energy-arrow">
      <svg width="40" height="24" viewBox="0 0 40 24">
        <line x1="0" y1="12" x2="30" y2="12" stroke="var(--sl-color-gray-4)" stroke-width="2"/>
        <polygon points="30,6 40,12 30,18" fill="var(--sl-color-accent)"/>
      </svg>
    </div>

    <!-- Energy -->
    <div class="energy-stage">
      <div class="energy-stage-header es-energy">Energy</div>
      <div class="energy-stage-body">
        <div class="energy-formula">
          <div class="formula-line formula-main">E<sub>node</sub> = P<sub>node</sub> √ó Œît</div>
          <div class="formula-note">Joules = Watts √ó seconds</div>
          <div class="formula-divider"></div>
          <div class="formula-line">E<sub>pod</sub> = <sup>cpu<sub>pod</sub></sup>‚ÅÑ<sub>cpu<sub>total</sub></sub> √ó E<sub>node</sub></div>
          <div class="formula-note">Proportional distribution</div>
        </div>
      </div>
    </div>

    <div class="energy-arrow">
      <svg width="40" height="24" viewBox="0 0 40 24">
        <line x1="0" y1="12" x2="30" y2="12" stroke="var(--sl-color-gray-4)" stroke-width="2"/>
        <polygon points="30,6 40,12 30,18" fill="var(--sl-color-accent)"/>
      </svg>
    </div>

    <!-- Carbon -->
    <div class="energy-stage">
      <div class="energy-stage-header es-carbon">Carbon</div>
      <div class="energy-stage-body">
        <div class="energy-formula">
          <div class="formula-line formula-main">CO‚ÇÇe = E<sub>kWh</sub> √ó I √ó PUE</div>
          <div class="formula-divider"></div>
          <div class="formula-note">E<sub>kWh</sub> = Joules / 3,600,000</div>
          <div class="formula-note">I = gCO‚ÇÇe/kWh (Electricity Maps)</div>
          <div class="formula-note">PUE = datacenter overhead</div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .energy-diagram {
    margin: 2rem 0;
    overflow-x: auto;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .energy-flow {
    display: flex;
    align-items: stretch;
    gap: 0;
    min-width: 760px;
  }

  .energy-stage {
    flex: 1;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
    overflow: hidden;
    background: var(--sl-color-gray-6);
    display: flex;
    flex-direction: column;
  }

  .energy-formula-stage {
    flex: 1.2;
  }

  .energy-stage-header {
    padding: 0.5rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-align: center;
    border-bottom: 1px solid var(--sl-color-gray-5);
  }

  .es-input { background: rgba(34, 197, 94, 0.1); color: #22c55e; }
  .es-process { background: rgba(168, 85, 247, 0.1); color: #a855f7; }
  .es-energy { background: rgba(245, 158, 11, 0.1); color: #f59e0b; }
  .es-carbon { background: rgba(6, 182, 212, 0.1); color: #06b6d4; }

  .energy-stage-body {
    padding: 0.75rem;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .energy-items {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    width: 100%;
  }

  .energy-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.5rem;
    border-radius: 0.375rem;
    background: rgba(34, 197, 94, 0.04);
    border: 1px solid var(--sl-color-gray-5);
  }

  .ei-icon { font-size: 1rem; flex-shrink: 0; }
  .ei-label { font-size: 0.7rem; font-weight: 600; color: var(--sl-color-white); flex: 1; }
  .ei-unit { font-size: 0.6rem; color: var(--sl-color-gray-3); }

  .energy-formula {
    text-align: center;
    width: 100%;
  }

  .formula-line {
    font-size: 0.75rem;
    color: var(--sl-color-gray-2);
    line-height: 1.8;
    font-family: 'Georgia', serif;
  }

  .formula-main {
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--sl-color-white);
  }

  .formula-note {
    font-size: 0.625rem;
    color: var(--sl-color-gray-3);
    font-style: italic;
    line-height: 1.6;
  }

  .formula-divider {
    width: 2rem;
    height: 1px;
    background: var(--sl-color-gray-5);
    margin: 0.375rem auto;
  }

  .energy-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    padding: 0 0.125rem;
  }
</style>
