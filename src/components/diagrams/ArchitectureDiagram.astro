<style>
  .arch-diagram {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
    margin: 2rem 0;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .arch-section {
    width: 100%;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
    padding: 1.25rem;
    background: var(--sl-color-gray-6);
    position: relative;
  }

  .arch-section-label {
    position: absolute;
    top: -0.75rem;
    left: 1.25rem;
    background: var(--sl-color-gray-6);
    padding: 0 0.5rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--sl-color-gray-3);
  }

  .arch-badge {
    display: inline-block;
    background: var(--sl-color-accent-low);
    color: var(--sl-color-accent);
    padding: 0.1rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.625rem;
    font-weight: 600;
    margin-left: 0.375rem;
    text-transform: uppercase;
  }

  .arch-row {
    display: grid;
    gap: 0.75rem;
    margin-top: 0.75rem;
  }

  .arch-cols-1 { grid-template-columns: 1fr; max-width: 280px; margin-left: auto; margin-right: auto; }
  .arch-cols-3 { grid-template-columns: repeat(3, 1fr); }
  .arch-cols-4 { grid-template-columns: repeat(4, 1fr); }

  .arch-node {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    border: 1px solid var(--sl-color-gray-5);
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .arch-node:hover {
    border-color: var(--sl-color-accent);
    box-shadow: 0 0 0 1px var(--sl-color-accent);
  }

  .arch-source { background: rgba(34, 197, 94, 0.06); border-color: rgba(34, 197, 94, 0.25); }
  .arch-processor { background: rgba(59, 130, 246, 0.06); border-color: rgba(59, 130, 246, 0.25); }
  .arch-module { background: rgba(168, 85, 247, 0.06); border-color: rgba(168, 85, 247, 0.2); }
  .arch-combined { background: rgba(245, 158, 11, 0.06); border-color: rgba(245, 158, 11, 0.25); }
  .arch-storage { background: rgba(6, 182, 212, 0.06); border-color: rgba(6, 182, 212, 0.25); }
  .arch-api { background: rgba(249, 115, 22, 0.06); border-color: rgba(249, 115, 22, 0.25); }
  .arch-reco { background: rgba(168, 85, 247, 0.06); border-color: rgba(168, 85, 247, 0.2); }
  .arch-ui { background: rgba(34, 197, 94, 0.06); border-color: rgba(34, 197, 94, 0.2); }

  .arch-node-icon {
    font-size: 1.5rem;
    line-height: 1;
    margin-bottom: 0.375rem;
  }

  .arch-node-title {
    font-size: 0.8rem;
    font-weight: 700;
    color: var(--sl-color-white);
    line-height: 1.2;
  }

  .arch-node-desc {
    font-size: 0.675rem;
    color: var(--sl-color-gray-3);
    margin-top: 0.2rem;
    line-height: 1.3;
  }

  .arch-connector,
  .arch-connector-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.25rem 0;
  }

  .arch-connector-line {
    width: 2px;
    height: 12px;
    background: var(--sl-color-gray-4);
  }

  .arch-connector-arrow {
    color: var(--sl-color-accent);
    font-size: 0.75rem;
    line-height: 1;
  }

  @media (max-width: 640px) {
    .arch-cols-3,
    .arch-cols-4 {
      grid-template-columns: repeat(2, 1fr);
    }
    .arch-node {
      padding: 0.5rem 0.625rem;
    }
    .arch-node-icon { font-size: 1.25rem; }
    .arch-node-title { font-size: 0.7rem; }
    .arch-node-desc { font-size: 0.6rem; }
    .arch-section { padding: 1rem 0.75rem; }
  }
</style>
